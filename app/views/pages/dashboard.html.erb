<div class="container-fluid">
  <!-- Top row -->
  <div class="row d-flex justify-content-center p-3">
    <!-- User info -->
    <div class="grid-card col-md-10 d-flex align-items-center p-3 m-4">
      <%= image_tag current_user.avatar, class:"img-fluid mr-4", style: "height: 150px; width: 150px; border-radius: 50%;" %>
      <div class="container">
      <h4>
        <%= @user.first_name %> <%= @user.last_name %>
      </h4>
      <p class="text-muted">
        <%= @user.email %> | <%= @user.location %> <br>
        <%= @user.bio %>
      </p>
      </div>
    </div>
  </div>

  <div class="container-fluid bg-white px-5 pb-5">
    <!-- Listing History -->
    <div class="row d-flex justify-content-start p-3 m-4">
      <div class="grid-card col-md-10 d-flex align-items-center p-3 m-4">
        <i class="fas fa-bicycle mr-4"></i>
        <h4>Listing History</h4>
      </div>
    </div>
    <div class="row border m-3">
      <% @user.bikes.each do |bike| %>
        <div class="card-product m-1">
          <%= cloudinary_imgs(bike.images[0].key,bike) %>
          <div class="card-product-infos d-flex flex-column justify-content-start">
            <h2 class="card-title"> <%= bike.name %> </h2> <hr>
            <p><i class="fas fa-dollar-sign"></i> <%= bike.id %></p> <hr>
            <%= link_to "More Info", bike_path(bike), class:"mb-3"%>
          </div>
        </div>
      <% end %>
    </div>

  </div>
  <!-- Rental History -->
    <div class="row d-flex justify-content-center p-3">
    <div class="grid-card col-md-12 d-flex align-items-center p-3 m-4">
      <i class="fas fa-list-alt mr-4"></i>
      <h4>Rental History</h4>
    </div>
  </div>

  </div>
