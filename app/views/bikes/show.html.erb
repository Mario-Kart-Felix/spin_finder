<div class="container font-weight-light">
    <!--CAROOUSEL -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <% @bike.images.each.with_index(0) do |post, index| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index.zero? ? 'active' : '' %>"></li>
            <% end %>
        </ol>
        <div class="carousel-inner">
            <% @bike.images.each.with_index(0) do |bike, index| %>
            <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
                <%= link_to "#" do %>
                <%= cloudinary_imgs_cara(bike.key,@bike) %>
                <% end %>
            </div>
            <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!--NAME -->
    <div class="inner">
        <div class="name m-3">
            <h3><strong>
                    <%= @bike.name  %></strong></h3>
        </div>
        <div class="row justify-content-center parent">
            <!-- CARD -->
            <div class="details sticky p-3 m-3 text-center col-3">
                <div class="avail">
                    <% if @bike.available == true %>
                    <h6 style="color:green">Bike is available</h6>
                    <% else %>
                    <h6 style="color:red">Bike is unavailable</h6>
                    <% end %>
                </div>
                <h5>$
                    <%= @bike.price.to_i  %> per hour</h5>
                <h5>Ride me in</h5>
                <%= @bike.location  %>
                <h5>Rating:</h5>
                <h5>
                    <%= @bike.rating %> / 5 </h5>
                <%= link_to "Ride!", new_bike_booking_path(@bike), :class => "m-3 btn btn-primary" %>
            </div>
            <!--DESCRIPTION-->
            <div class="content col-8 ">
                <div class="description p-3 m-3">
                    <h5><strong>The bike</strong></h5>
                    <%= @bike.description  %>
                </div>
                <!-- REVIEWS -->
                <div class="reviews m-3">
                    <h3><strong>Reviews</strong></h3>
                    <% @bike.reviews.each do |review| %>
                    <div class="single-review p-3 m-3">
                        <h5>Content</h5>
                        <%= review.content %>
                        <h5>Rating</h5>
                        <h5>
                            <%= review.rating %> / 5</h5>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>